<!-- ノートに対するいいねの処理 -->
<% if user_signed_in? %>
  <% if note.favorited_by?(current_user) %>
    <%= link_to note_note_favorites_path(note),method: :delete,remote: true do %>
      <i class="fas fa-thumbs-up"><%= note.note_favorites.count %></i>
    <% end %>
  <% else %>
    <%= link_to note_note_favorites_path(note),method: :post,remote: true do %>
      <i class="far fa-thumbs-up"><%= note.note_favorites.count %></i>
    <% end %>
  <% end %>
<% else %>
    <i class="far fa-thumbs-up"><%= note.note_favorites.count %></i>
<% end %>