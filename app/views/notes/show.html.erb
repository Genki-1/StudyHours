<div class="container">
  <div class="row">
    <h3>ノート</h3>
  </div>
  <div class="row">    
    <div class="card w-100">
      <div class="row card-body">
        <h4 class="col-3">タイトル</h4>
        <div style="position:absolute; right:5%;">
          <%= render 'layouts/note_favorite', note: @note%>
          <div>
            <%= link_to "編集する",edit_note_path(@note)%>
            <%= link_to "ノートを削除する",note_path(@note),method: :delete%>            
          </div>

        </div>
        <h4><%= @note.title %></h4>
      </div>
      <hr style="margin-top:0;margin-bottom:0;">
      <div class="row card-body">
        <h4 class="col-3">タグ</h4>
        <h5><%= @note.tag_list %></h5>    
      </div>
      <hr style="margin-top:0;margin-bottom:0;">
      <div class="row card-body">
        <div class="w-100 mb-5">
          <div class="ml-3">
            <%= markdown(@note.body) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">   
  <h4 class="mt-4">コメント</h4>
  <% @note_comments.each do |comments| %>
      <div class="card w-100 mt-1 mb-2">
        <div class="card-body d-flex">
          <%= attachment_image_tag comments.user, :profile_image, :fill, 70, 70, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png",size: "70x70" %>
          <div class="ml-3 d-flex flex-column justify-content-center">
            <%= comments.comment %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">    
    <%= form_with model:[@note ,@note_comment],class:"w-100" do |f| %>
        <%= f.text_area :comment, rows:'5', class: "form-control w-100",placeholder: "コメントを入力してください" %>
        <%= f.submit "コメントする", class: "btn btn-primary mt-2" %>
    <% end %>
 </div> 
</div>
