<div class="container">
   <div class="d-flex justify-content-center">
    <div class="password">
      <div class="row header">
        <h4>パスワード再設定</h4>
      </div>
      <div class="row mb-3">
        <p>登録時に利用したメールアドレスを入力してください</p>        
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-field row mt-2">
            <%= f.label :email,"メールアドレス" %>
          <div class="col-8">      
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
          </div>
        </div>
        <div class="actions mt-4 d-flex justify-content-center">
          <%= f.submit "認証メールを送信する",class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
            <div class="row justify-content-end mt-3 devise-relative">
        <%= link_to "ログイン画面に戻る", new_session_path(resource_name),class: "devise-absolute" %>
      </div>

    </div>
  </div>
</div>
