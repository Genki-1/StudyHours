<div class="container d-flex justify-content-center study-log-edit">
  <div class="width">
    <div class="s-card">
      <%= form_with model: @study_log,local:true do |f|%>
        <%= render 'layouts/error_messages', model: @study_log %>
          <div class="e-header d-flex">
            <%= attachment_image_tag @study_log.user, :profile_image, :fill, 80, 80,  class: "pull-left profile-img", fallback: "no_image.png",size: "100x100" %>              
            <div class="ml-3 d-flex flex-column justify-content-center">
              <h6><%= @study_log.working_date.strftime("%Y年%m月%d日")%></h6>
              <h6><%= @study_log.user.name %></h6>
            </div>
          </div>

          <% @study_log.study_log_details.each do |detail| %>
            <%= f.fields_for :study_log_details, detail do |ff| %>
              <ul class="list-group">
                <li class="list-group-item">
                  <span class="col-3">学習内容</span>
                    <%= ff.text_field :tag_list,value: detail.tag_list.join(','), class: "form-control col-6 d-inline-block" %>
                  <hr>
                  <span class="col-3">学習時間</span>
                    <%= ff.select :hour, Array.new(24){|index| index },{},class: "form-control col-3 d-inline-block" %>
                  <span class="mr-2 ml-1 mt-2">時間</span>
                    <%= ff.select :min,Array.new(60){|index| index},{},class: "form-control col-3 d-inline-block" %>
                  <span class="mr-2 ml-1 mt-2">分</span>
                </li>
            <% end %>
          <% end %>
          <li class="list-group-item" style="position: relative;">
            <div class="card-body pt-2">
              <div class="col-3" style="position: absolute;left:5%;top:2%;">
                メモ
              </div>
              <div class="offset-2 ">
                <%=f.text_area :memo ,class: "form-control" %>              
              </div>
            </div>
          </li>
        </ul>
      </div>
        <%= f.submit "更新する",class: "mt-2 btn btn-primary" %>
        <%= link_to "削除する",study_log_path(@study_log),method: :delete,class: "btn btn-danger mt-2" %>     
        <% end %>
      </div>
    </div>

