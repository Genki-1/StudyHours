<div class="container d-flex justify-content-center">
  <div class="w-50">
    <div class="card" style="position: relative;">
      <div style="position: absolute; top:3%; right:2%;">
        いいね
      </div>
      <div class="card-header d-flex">
        <%= attachment_image_tag @study_log.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png",size: "100x100" %>
        <div class="ml-3 d-flex flex-column justify-content-center">
          <h6><%= @study_log.user.name %>さんの</h6>
          <h6><%= @study_log.working_date.strftime("%Y年%m月%d日") %>の積み上げ</h6>
        </div>
      </div>
      <div class="card-body" style="padding-bottom: 0px;">
          <% @study_log.study_log_details.each do |detail| %>
            <h6>学習内容<%= detail.tag_list %></h6>
            <hr>
            <h6>学習時間<%= detail.hour%>時間<%= detail.min %>分</h6>
            <hr>
          <% end %>
      </div>
      <div class="card-body pt-2">
          <%= @study_log.memo %>    
      </div>
    </div>
    <h4 class="mt-4">みんなのコメント</h4>
    <% @study_log.study_log_comments.each do |comments| %>
      <div class="card mt-1">
        <div class="card-body d-flex">
          <%= attachment_image_tag comments.user, :profile_image, :fill, 70, 70, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png",size: "70x70" %>
        <div class="ml-3 d-flex flex-column justify-content-center">
          <%= comments.comment %>
         </div>
       </div>
      </div>
    <% end %>

  <h4 class="mt-4">コメント</h4>
  <%= form_with model:[@study_log ,@study_log_comment] do |f| %>
    <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    <%= f.submit "コメントする", class: "btn btn-primary" %>
  <% end %>
</div>
</div>
