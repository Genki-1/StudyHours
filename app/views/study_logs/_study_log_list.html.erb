<!-- 表示される学習記録一覧 -->
    <% study_logs.each do |study_log| %>
      <div class="col-lg-4 col-12 mb-2">
        <div class="card h-100">
          <div class="card-header">
            <div>
              <%= study_log.working_date.strftime("%Y年%m月%d日")%>              
            </div>
            <div>
              <%= attachment_image_tag study_log.user, :profile_image, :fill, 80, 80,  class: "pull-left profile-img", fallback: "no_image.png",size: "80x80" %>              
            <span class="ml-1">
              <%= study_log.user.name %>
            </span>
            </div>
          </div>
          <ul class="list-group">
            <!-- 登録された学習内容を表示 -->
            <% study_log.study_log_details.each do |study_log_detail| %>
              <li class="list-group-item">
                <span class="col-3">学習内容</span>
                <span class="col-9">
                <% study_log_detail.tag_list.each do |tag| %> 
                  <span class="badge badge-primary p-2"><%= tag %></span>
                <% end %>
              </span>
              </li>
              <li class="list-group-item">
                <span class="col-3">学習時間</span>
                <span class="col-9"><%= study_log_detail.hour %>時間<%=study_log_detail.min%>分</span>
              </li>
            <% end %>
            <li class="list-group" style="height: 20vh;">
              <div class="card-body pt-2">
                <div class="memo">
                  <span class="col-3">学習メモ</span>
                </div>
                <div class="mt-2 col-12">
                  <%= study_log.memo %>
                </div>
              </div>
            </li>
          </ul>
          <div class="memo-detail-relative mt-3">
            <div class="card-footer">
              <!-- いいね機能の処理 -->
              <span id="study-log-favorite-<%= study_log.id %>">
                <%= render 'study_log_favorites/study_log_favorite',study_log: study_log %>                
              </span>
              <span class="ml-2 mr-2"><%= link_to "詳細へ",study_log_path(study_log) %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
