<div class="d-flex justify-content-around">
  <% @records.each do |record| %>
    <div class="card" style="width:31%">
      <div class="card-header d-flex">
        <%= image_tag 'top_img.jpg',size: "80x80" %>
        <div class="ml-3">
          <%= record.working_date.strftime("%Y年%m月%d日")%> <br>
          <%= record.user.name %>
        </div>
      </div>
      <ul class="list-group">
        <% record.record_details.each do |record_detail| %>
          <li class="list-group-item"><%= record_detail.hour %>時間<%=record_detail.min%>分</li>
        <% end %>
      </ul>
      <div class="card-body memo-relative">
        <div class="memo-absolute">
          memo
        </div>
        <div class="mt-2">
          <%= record.memo %>    
        </div>
      </div>
    </div>
  <% end %>
</div>
