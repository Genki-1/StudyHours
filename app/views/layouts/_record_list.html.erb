<!-- 表示される学習記録一覧 -->
<div class="d-flex justify-content-around">
  <% @records.each do |record| %>
    <div class="card" style="width:31%">
      <div class="card-header d-flex">
        <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png",size: "80x80" %>        
        <div class="ml-2">
          <%= record.working_date.strftime("%Y年%m月%d日")%> <br>
          <%= record.user.name %>
        </div>
      </div>
      <ul class="list-group">
        <% record.record_details.each do |record_detail| %>
          <li class="list-group-item"><%= record_detail.hour %>時間<%=record_detail.min%>分</li>
        <% end %>
      </ul>
      <div class="card-body memo-relative">
        <div class="memo">
          memo
        </div>
        <div class="mt-2">
          <%= record.memo %>
        </div>
        <div class="memo-detail-relative mt-3">
          <div class="footer">
            <% if record.favorited_by?(current_user) %>
              <%= link_to record_record_favorites_path(record),method: :delete do %>
                <i class="fas fa-heart"><%= record.record_favorites.count %></i>
              <% end %>
            <% else %>
              <%= link_to record_record_favorites_path(record),method: :post do %>
                <i class="far fa-heart"><%= record.record_favorites.count %></i>
              <% end %>
            <% end %>
            <span class="ml-2 mr-2">詳細へ</span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
