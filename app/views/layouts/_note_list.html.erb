<% notes.each do |note| %>
  <div class="card mt-2">
    <div class="card-header d-flex justify-content-end">
      <div class="col-3 notes-disp-left">
        <%= note.created_at.strftime("%Y年%m月%d日") %>
      </div>
      <div class="col-2">
        <%= note.note_favorites.count %>いいね
      </div>
      <div class="col-2">
        <%= note.note_comments.count %>コメント
      </div>
    </div>
    <div class="card-body d-flex justify-content-start">
      <div class="col-2">
        <%= attachment_image_tag note.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png",size: "100x100" %>     
      </div>
      <div class="col-10">
        <h4><%= note.title %></h4>
        <%= note.body %>
        <div class="text-right">
            <%= link_to "記事を見る",note_path(note),class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
