<!-- サイドバー -->
<div class="col-3 card h-100">
  <div class="d-flex justify-content-center mt-3">
    <%= attachment_image_tag user, :profile_image, :fill, 150, 150, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png",size: "150x150" %>
  </div>
  <hr>
  <div class="text-center">
    <%= user.name %>
  </div>
  <div class="card-body" style="position: relative;">
    <div class="card-text text-center mb-3" style="font-size:0.9rem;">
      <%= user.introduction %>
    </div>
    <div style="position: absolute;right:0;bottom:0;">
      <%= link_to "詳細へ",detail_user_path(user) %>    
    </div>
  </div>
  <hr style="margin: 0.5rem 1rem;">
  <div>
    <div class="disp_following d-flex justify-content-around">
      <div>
        Follow <%= link_to user.relationships.count ,following_user_path(user) %>
      </div>
      <div>
        Follower <%= link_to user.reverse_of_relationships.count ,followers_user_path(user) %>
      </div>
    </div>
    <div class="text-center mt-3">
        お気に入り一覧
    </div>
  </div>
  <hr>
  <div class="ml-3 mb-2" style="font-size:0.9rem;">
    今週の目標
  </div>
  <div class="text-center">
    <%= user.goal_hour%>時間<%= user.goal_minute %>分
  </div>
  <div class="mt-3 ml-3 mb-2" style="font-size:0.9rem;">
    今週の積み上げ
  </div>
  <div class="d-flex justify-content-center">
    XXX時間QQ分
  </div>
  <hr>
  <div class="text-center mb-5">
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー解除",relationship_path(user_id: user.id),method: :delete,class: "btn btn-danger" %>
      <% else %>
        <%= link_to "フォロー",relationships_path(user_id: user.id),method: :post, class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>