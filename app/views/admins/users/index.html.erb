<div class="container">
  <div class="row">    
    <table class="table table-hover">
      <thead>
        <th>ユーザ名</th>
        <th>メールアドレス</th>
        <th>自己紹介</th>
        <th>ステータス</th>
        <th></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
              <td class="admin-user-name"><%= link_to user.name, admins_user_path(user)%></td>
              <td class="admin-user-email"><%= user.email %></td>
              <td><%= user.introduction %></td>
              <td><%= link_to "詳細へ",admins_user_path(user),class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>
