<div class="container">
  <div class="row">    
    <table class="table table-hover">
      <thead>
        <th>タイトル</th>
        <th>タグ</th>
        <th>投稿者</th>
        <th></th>
      </thead>
      <tbody>
        <% @notes.each do |note| %>
          <tr>
            <td class="admin-note-title">
              <%= note.title %>
            </td>
            <td>
              <% note.tags.pluck(:name).each do |tag| %>
                <span class="badge-success p-1 badge-tag"><%= tag %></span>
              <% end %>
            </td>
            <td>
              <%= note.user.name %>
            </td>
            <td><%= link_to "詳細",admins_note_path(note),class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>